<Frame name="FrameHeader" width="fill_parent" height="fill_parent" styling="res/styling/styling.meta">
  <Container name="headerContainer">
    <Label height="fill_parent" name="title">VoxelTracer </Label>
    <Label height="fill_parent">FPS: </Label>
    <Label height="fill_parent" name="fpsCounter">00</Label>
  </Container>
  <Container vertical="false" width="fill_parent" height="fill_parent" spacing="0">
    <Container width="200" height="fill_parent" padding="10">
      <Label>Time</Label>
      <Slider name="TimeSlider" minValue="0" maxValue="1" defaultValue="0.5" stepSize="0.001" indicatorInside="true"/>
      <Button name="ToggleDayNight">Toggle Time</Button>
      <Button name="MakeDay">Make day</Button>
      <Label>Ray noise</Label>
      <Slider name="RayNoiseSlider" minValue="0" maxValue="0.05" defaultValue="0" stepSize="0" indicatorInside="true"/>
      <Label>Reflection noise</Label>
      <Slider name="ReflectionNoiseSlider" minValue="0" maxValue="0.05" defaultValue="0" stepSize="0" indicatorInside="true"/>
      <Label>Refraction noise</Label>
      <Slider name="RefractionNoiseSlider" minValue="0" maxValue="0.01" defaultValue="0" stepSize="0.0" indicatorInside="true"/>
      <Label>Temporal Filter</Label>
      <Slider name="TemporalSlider" minValue="0" maxValue="1" defaultValue="1.0" stepSize="0.001" indicatorInside="true"/>

      <Label>Controls:</Label>
      <Label>C: Reset camera</Label>
      <Label>F: Clear FrameBuffers</Label>
      <Label>F1: Screenshot</Label>
    </Container>
    <SceneView name="scene" width="fill_parent" height="fill_parent"/>
  </Container>
</Frame>
